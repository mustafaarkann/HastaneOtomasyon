@model Hastane.DataAccess.Models.Doktorlar

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h4><i class="fa-solid fa-pen-to-square me-2"></i>Doktor Düzenle</h4>
            </div>
            <div class="card-body">

                @if (ViewBag.Hata != null)
                {
                    <div class="alert alert-danger">@ViewBag.Hata</div>
                }

                <form method="post">
                    <input type="hidden" asp-for="KisiId" />
                    <input type="hidden" asp-for="Sifre" />
                    <input type="hidden" asp-for="KullaniciTuru" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>TC Kimlik No</label>
                            <input asp-for="TcNo" class="form-control" required maxlength="11" readonly />
                            <small class="text-muted">TC No değiştirilemez.</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Diploma No</label>
                            <input asp-for="DiplomaNo" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Ad</label>
                            <input asp-for="Ad" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Soyad</label>
                            <input asp-for="Soyad" class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Uzmanlık Alanı</label>
                        <select asp-for="UzmanlikAlani" class="form-select">
                            <option>Dahiliye</option>
                            <option>Kardiyoloji</option>
                            <option>Göz Hastalıkları</option>
                            <option>KBB</option>
                            <option>Nöroloji</option>
                            <option>Ortopedi</option>
                            <option>Genel Cerrahi</option>
                            <option>Acil Servis</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Telefon</label>
                            <input asp-for="Telefon" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Cinsiyet</label>
                            <select asp-for="Cinsiyet" class="form-select">
                                <option value="E">Erkek</option>
                                <option value="K">Kadın</option>
                            </select>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg">Değişiklikleri Kaydet</button>
                        <a href="/Doktor/Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>