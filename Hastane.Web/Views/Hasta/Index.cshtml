@model List<Hastane.DataAccess.Models.Hastalar>

<div class="card shadow">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Hasta Listesi</h4>
        <a href="/Hasta/Create" class="btn btn-light text-primary fw-bold"><i class="fa-solid fa-plus"></i> Yeni Hasta Ekle</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>TC No</th>
                    <th>Ad Soyad</th>
                    <th>Telefon</th>
                    <th>Kan Grubu</th>
                    <th>Sosyal Güvence</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TcNo</td>
                        <td>@item.Ad @item.Soyad</td>
                        <td>@item.Telefon</td>
                        <td>@item.KanGrubu</td>
                        <td>@item.SosyalGuvence</td>
                        <td>
                            <a href="/Hasta/Delete/@item.KisiId" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğine emin misin?')"><i class="fa-solid fa-trash"></i> Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>